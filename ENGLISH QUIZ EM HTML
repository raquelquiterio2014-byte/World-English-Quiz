<h1>English Quiz</h1>
<div id="quiz">
<div class="question" id="question"></div>
<div class="options" id="options"></div>
<button id="nextBtn">Next</button>
</div>
<div id="result"></div>
</div>
 
<script>
const questions = [
    {question: "What is the capital of France?", options: ["A) Berlin", "B) Madrid", "C) Paris", "D) Rome"], answer: "C"},
    {question: "Which planet is known as the Red Planet?", options: ["A) Earth", "B) Mars", "C) Jupiter", "D) Venus"], answer: "B"},
    {question: "Who painted the Mona Lisa?", options: ["A) Vincent van Gogh", "B) Pablo Picasso", "C) Leonardo da Vinci"], answer: "C"},
    {question: "What is the fastest animal on Earth?", options: ["A) Hippo", "B) Lion", "C) Cheetah", "D) Snake"], answer: "C"},
    {question: "Which is the longest river in the world?", options: ["A) The Amazon river", "B) The Nile river", "C) The Yangtze river", "D) The Mississippi river"], answer: "B"},
    {question: "Which country is the most populous?", options: ["A) United States", "B) China", "C) India", "D) Russia"], answer: "B"},
    {question: "What ancient civilization built the pyramids of Giza?", options: ["A) Egyptians", "B) Greeks", "C) Romans", "D) Mayans"], answer: "A"},
    {question: "What is the process called when a plant makes its own food?", options: ["A) Photosynthesis", "B) Respiration", "C) Transpiration", "D) Germination"], answer: "A"},
    {question: "What is the highest mountain peak?", options: ["A) K2", "B) Kangchenjunga", "C) Lhotse", "D) Mount Everest"], answer: "D"},
    {question: "What is the chemical symbol for gold?", options: ["A) Au", "B) Ag", "C) Pb", "D) Fe"], answer: "A"}
];
 
let currentQuestion = 0;
let score = 0;
 
const questionEl = document.getElementById("question");
const optionsEl = document.getElementById("options");
const nextBtn = document.getElementById("nextBtn");
const resultEl = document.getElementById("result");
 
function showQuestion() {
    const q = questions[currentQuestion];
    questionEl.textContent = q.question;
    optionsEl.innerHTML = "";
 
    q.options.forEach(opt => {
        const label = document.createElement("label");
        label.innerHTML = `<input type="radio" name="option" value="${opt[0]}"> ${opt}`;
        optionsEl.appendChild(label);
    });
}
 
nextBtn.addEventListener("click", () => {
    const selected = document.querySelector('input[name="option"]:checked');
    if (!selected) {
        alert("Please select an answer!");
        return;
    }
 
    if (selected.value === questions[currentQuestion].answer) {
        score++;
        alert("Correct!");
    } else {
        alert(`Incorrect. The correct answer was ${questions[currentQuestion].answer}.`);
    }
 
    currentQuestion++;
    if (currentQuestion < questions.length) {
        showQuestion();
    } else {
        document.getElementById("quiz").style.display = "none";
        resultEl.textContent = `Quiz finished! Your final score is: ${score}/${questions.length}`;
    }
});
 
showQuestion();
</script>
 
</body>
</html>
